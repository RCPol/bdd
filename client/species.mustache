		 $.getJSON("/api/Schemas?filter=%7B%22where%22%3A%7B%22schema%22%3A%22dwc%22%2C%22language%22%3A%22"+language+"%22%7D%7D", function(data){
		 		var scientificName = "";
		 		var collectionName = "";
		 		var municipality = "";
		 		var recordedBy = "";
				data.forEach(function(item) {			      			      
